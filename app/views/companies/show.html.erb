<% provide(:title,@company.name) %>
<div class="container-fluid">
  <div class="row-fluid">
    <span class="span6">
      <h1 class="heading">
        <%= @company.name %>
      </h1>
      <div>
        <%= link_to "#{@company.url}" ,@company.url %>
      </div>
      <div>
          <p><%= @company.phone%></p>
          <p><%= @company.address %></p>
      </div> 
      <div>
